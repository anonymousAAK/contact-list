<html lang="en">
    <head>
        <title>
            <%= locals.title%>
        </title>
        <script src="https://kit.fontawesome.com/4f060b777e.js" crossorigin="anonymous"></script>
        <link rel="stylesheet" href="/css/home.css">
        
    </head>
    <body>
        <h1 id="page-heading">
            <i class="fas fa-address-book"></i>
            My Contact List
            </h1>
            <form class="form" action="/create-contact" method="POST">
                <input type="text" name="name" placeholder="Enter name" required>
                <input type="number" name="phone" placeholder="Enter phone" required>
                <button class="form-button" type="submit">Add</button>
            </form>
        <div id="contact-list-container">
            <ul>
                
                <% for (let i of contact_list) { %> 
                <div class="main-contact">
                    <li id="contact">
                        <div class="details">
                        <p class="same"><%= i.name %></p>
                        <p class="same"><%= i.phone %></p>
                        </div>
                        
                        <div class="delete-button">
                            <a href="/delete-contact/?phone=<%= i.phone %>">
                                <i class="fas fa-window-close" ></i>
                            </a>
                        </div>
                    </li>
                </div>
                <% } %>
            </ul>
        </div>

    
        <script type="text/javascript" src="/js/home.js"></script>
    </body>
</html>